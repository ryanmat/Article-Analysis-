<h2>Article Submit</h2>
<%= form_for @article do |f| %>
	<%= f.label :title %><br>
	<%= f.text_area :title, :cols => "60" %><br>
	<br>
	<%= f.label :author %><br>
	<%= f.text_area :author, :cols => "30" %><br>
	<br>
	<%= f.label :web_url %><br>
	<%= f.text_area :web_url, :cols => "80" %><br>
	<br>
	<%= f.label :comments %><br>
	<%= f.text_area :comments, :cols => "80", :rows => "20" %><br>
	<br>
	<%= f.submit %>

	<% end %>